{% case settings.product_template %}
  {% when 'default' %}
    {% render 'product-card-default', product: product %}
  {% when 'default-card' %}
    {% render 'product-card-default', product: product, card: true %}
  {% when 'interactive' %}
    {% render 'product-card-interactive', product: product %}
  {% when 'interactive-card' %}
    {% render 'product-card-interactive', product: product, card: true %}
  {% when 'minimalist' %}
    {% render 'product-card-minimalist', product: product %}
{% endcase %}
