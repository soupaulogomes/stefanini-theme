{% case settings.blog_card_template %}
  {% when 'minimalist' %}
    {% render 'blog-card-minimalist-highlight', article: article %}
  {% when 'default' %}
    {% render 'blog-card-default-highlight', article: article, card: false %}
  {% when 'card' %}
    {% render 'blog-card-default-highlight', article: article, card: true %}
{% endcase %}
