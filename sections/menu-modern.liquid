{% if section.settings.fixed_on_top %}
  {% style %}
    header {
      position: sticky;
      top: 0;
      z-index: 30;
    }
  {% endstyle %}
{% endif %}
{% liquid
  assign loading = 'eager'
  assign fetchpriority = 'auto'
  if section.index == 1
    assign fetchpriority = 'high'
  elsif section.index > 2
    assign loading = 'lazy'
  endif
%}
<nav
  x-ref="nav"
  x-data="
    {
      prevScroll: 0,
      currentScroll: 0,
      scroll: false,
      onScroll() {
        this.currentScroll = window.pageYOffset
        document.querySelector('header').style.transition = 'top 0.5s ease-in-out'
        if (this.currentScroll > this.prevScroll) {
          document.querySelector('header').style.position = 'relative'
          document.querySelector('header').style.top = '-100%'
        } else {
          document.querySelector('header').style.position = 'sticky'
          document.querySelector('header').style.top = '0'
          document.querySelector('header').style.zIndex = '30'
        }
        this.prevScroll = this.currentScroll
      },
      open: false,
      menu: { expanded: null },
      submenu: { expanded: null },
      search: false,
      globalOpen: false
    }
  "
  :aria-expanded="open"
  @click.outside="
    open = false
    search = false
    menu.expanded = null,
    submenu.expanded = null
  "
  @keydown.escape="
    open = false
    search = false
    menu.expanded = null
    $nextTick(() => $refs.openButton.focus())
  "
  {% if section.settings.when_scrolling %}
    @scroll.window="onScroll()"
  {% endif %}
  class="{% if section.settings.select_transparency == 'transparent' %}hover:bg-white{% endif %} {% if section.settings.floating_on_home and request.page_type == 'index' %}absolute{% else %}relative{% endif %} z-30 w-full transition-all duration-300 ease-in-out {{ section.settings.link_color }} {{ section.settings.link_size }} {% if section.settings.select_transparency != 'transparent' and section.settings.select_transparency != 'translucent' %}{{ section.settings.background_color }}{% endif %}"
>
  <div class="relative flex w-full flex-col">
    <div
      @scroll.window="scroll = window.scrollY > $refs.nav.getBoundingClientRect().top"
      {% if section.settings.select_transparency != 'translucent' %}
        :class="{ 'bg-white/30 shadow-xl backdrop-blur': ({{ section.settings.translucent_on_scroll }} && scroll) }"
      {% endif %}
      class="absolute inset-0 -z-10 {% if section.settings.select_transparency == 'translucent' %}bg-white/30 shadow-xl backdrop-blur{% endif %} {% if section.settings.select_transparency == 'transparent' %}bg-transparent{% endif %}"
    ></div>
    <div class="flex w-full items-center justify-between gap-4 px-4 py-4 lg:gap-8 lg:px-8">
      <button
        @click="
          open = true
          $nextTick(() => $refs.closeButton.focus())
        "
        aria-label="{{ 'common.aria_label.open_menu' | t }}"
        :aria-expanded="open"
        aria-controls="mobile-menu"
        class="block {% if section.settings.select_position == 'center' %}flex-1{% endif %} p-1 {% if section.settings.link_display == "in_line" %}lg:hidden lg:flex-auto{% endif %} lg:p-2"
        x-ref="openButton"
      >
        <svg class="icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3.125 5.625H16.875M3.125 10H16.875M3.125 14.375H16.875" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>
      {% if section.settings.select_position == 'left' %}
        <a
          aria-label="{{ 'common.aria_label.cart' | t }}"
          class="link flex flex-1 justify-start"
          href="{{ routes.root_url }}"
        >
          {% render 'logo', logo_color: section.settings.logo_color, logo_size: section.settings.logo_size %}
        </a>
      {% endif %}
      {% if section.settings.menu != blank %}
        <ul class="{% if section.settings.select_position == 'center' %}flex-1 justify-start{% else %}justify-center{% endif %} hidden flex-wrap items-start gap-4 {% if section.settings.link_display == "in_line" %}lg:flex xl:gap-8{% endif %}">
          {% for link in section.settings.menu.links %}
            {% for block in section.blocks %}
              {% if block.settings.menu_item == link.title %}
                <li class="flex items-center">
                  {% if link.links != blank %}
                    {% assign linkTitle = link.title | escape %}
                    <div
                      x-data="{ open: false, close: false }"
                      class="flex select-none items-center"
                      @scroll.window="$nextTick(() => open = false)"
                      @click.outside="$nextTick(() => open = false)"
                      @mouseenter="open = true"
                      @mouseleave="close = true; setTimeout(() => { open = !close }, 500)"
                    >
                      <div>
                        <button
                          class="button button-ghost flex items-center gap-2 px-0 font-normal hover:text-accent {{ section.settings.link_size }}"
                          :class="{ 'text-accent': open }"
                          type="button"
                        >
                          <span class="mr-1">
                            {{- linkTitle -}}
                          </span>
                          <svg
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                            class="icon min-h-[1.5rem] min-w-[1.5rem]"
                          >
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M6.2762 8.65115C6.6345 8.30664 7.20424 8.31781 7.54875 8.67611L12 13.4014L16.4513 8.67611C16.7958 8.31781 17.3655 8.30664 17.7238 8.65115C18.0821 8.99567 18.0933 9.56541 17.7487 9.9237L12.6488 15.3237C12.4791 15.5002 12.2448 15.5999 12 15.5999C11.7552 15.5999 11.5209 15.5002 11.3513 15.3237L6.25125 9.9237C5.90674 9.56541 5.91791 8.99567 6.2762 8.65115Z" fill="currentColor"/>
                          </svg>
                        </button>
                        <div
                          x-cloak
                          x-show="open"
                          @mouseenter="open = true; close = false"
                          @mouseleave="open = false; close = true"
                          x-transition:enter="transition ease-out duration-100"
                          x-transition:enter-start="opacity-0 scale-90"
                          x-transition:enter-end="opacity-100 scale-100"
                          x-transition:leave="transition ease-in duration-100"
                          x-transition:leave-start="opacity-100 scale-100"
                          x-transition:leave-end="opacity-0 scale-90"
                          class="lg:wrapper absolute left-0 right-0 top-full z-30 mx-auto flex min-h-[30rem] w-full justify-between gap-4 p-8 shadow 3xl:w-screen {{ section.settings.background_color }}"
                        >
                          <div class="grid flex-1 grid-cols-5 gap-4 xl:gap-8">
                            {% for childlink in link.links %}
                              <ul class="flex flex-col gap-6">
                                <li class="mb-1 font-semibold">
                                  <a
                                    class="link hover:text-accent {{ block.settings.title_link_size }} {{ block.settings.title_link_color }}"
                                    aria-label="{{ childlink.title }}"
                                    href="{{ childlink.url | default: '#' }}"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink.title }}
                                  </a>
                                </li>
                                {%- for grandchildlink in childlink.links -%}
                                  <li class="{{ section.settings.child_link_color }} {{ section.settings.child_link_size }}">
                                    <a
                                      aria-label="{{ grandchildlink.title | escape }}"
                                      href="{{ grandchildlink.url | default: '#' }}"
                                      class="link hover:text-accent {{ block.settings.link_size }} {{ block.settings.link_color }}"
                                      {% if grandchildlink.current %}
                                        aria-current="page"
                                      {% endif %}
                                    >
                                      {{ grandchildlink.title | escape }}
                                    </a>
                                  </li>
                                {%- endfor -%}
                              </ul>
                            {%- endfor -%}
                            {% if block.settings.image_desktop != blank or block.settings.image_mobile != blank %}
                              <div class="{% if block.settings.image_desktop_2 == blank %}col-start-5 col-end-6{% else %}col-start-4 col-end-5{% endif %} flex flex-col gap-6">
                                <a
                                  aria-label="{{ 'common.aria_label.image' | t }}"
                                  href="{{ block.settings.url | default: '#' }}"
                                  class="flex h-full w-full flex-col items-center justify-start gap-4"
                                >
                                  {% liquid
                                    assign image_class = 'object-contain image h-auto w-full hover:scale-105 transition-transform duration-700 image-menu'
                                    if block.settings.image_mobile != blank
                                      assign image_desktop_class = image_class | append: ' hidden md:block'
                                      assign image_mobile_class = image_class | append: ' md:hidden'
                                    else
                                      assign image_desktop_class = image_class
                                      assign image_mobile_class = image_class
                                    endif
                                  %}
                                  {{
                                    block.settings.image_desktop
                                    | image_url: width: 960
                                    | image_tag:
                                      loading: loading,
                                      fetchpriority: fetchpriority,
                                      class: image_desktop_class
                                  }}
                                  {% if block.settings.image_mobile != blank %}
                                    {{
                                      block.settings.image_mobile
                                      | image_url: width: 600
                                      | image_tag:
                                        loading: loading,
                                        fetchpriority: fetchpriority,
                                        class: image_mobile_class
                                    }}
                                  {% endif %}
                                  {% if block.settings.title != blank %}
                                    <span class="image-title {{ block.settings.title_color }} {{ block.settings.title_size }}">
                                      {{- block.settings.title -}}
                                    </span>
                                  {% endif %}
                                  {% if block.settings.text != blank %}
                                    <span class="image-title {{ block.settings.text_color }} {{ block.settings.text_size }}">
                                      {{- block.settings.text -}}
                                    </span>
                                  {% endif %}
                                </a>
                              </div>
                            {% endif %}
                            {% if block.settings.image_desktop_2 != blank or block.settings.image_mobile_2 != blank %}
                              <div class="col-start-5 col-end-6 flex flex-col gap-6">
                                <a
                                  aria-label="{{ 'common.aria_label.image' | t }}"
                                  href="{{ block.settings.url_2 | default: '#' }}"
                                  class="flex h-full w-full flex-col items-center justify-start gap-4"
                                >
                                  {% liquid
                                    assign image_class = 'object-contain image h-auto w-full hover:scale-105 transition-transform duration-700 image-menu'
                                    if block.settings.image_mobile_2 != blank
                                      assign image_desktop_class = image_class | append: ' hidden md:block'
                                      assign image_mobile_class = image_class | append: ' md:hidden'
                                    else
                                      assign image_desktop_class = image_class
                                      assign image_mobile_class = image_class
                                    endif
                                  %}
                                  {{
                                    block.settings.image_desktop_2
                                    | image_url: width: 960
                                    | image_tag:
                                      loading: loading,
                                      fetchpriority: fetchpriority,
                                      class: image_desktop_class
                                  }}
                                  {% if block.settings.image_mobile_2 != blank %}
                                    {{
                                      block.settings.image_mobile_2
                                      | image_url: width: 600
                                      | image_tag:
                                        loading: loading,
                                        fetchpriority: fetchpriority,
                                        class: image_mobile_class
                                    }}
                                  {% endif %}
                                  {% if block.settings.title_2 != blank %}
                                    <span class="image-title {{ block.settings.title_color_2 }} {{ block.settings.title_size_2 }}">
                                      {{- block.settings.title_2 -}}
                                    </span>
                                  {% endif %}
                                  {% if block.settings.text_2 != blank %}
                                    <span class="image-title {{ block.settings.text_color_2 }} {{ block.settings.text_size_2 }}">
                                      {{- block.settings.text_2 -}}
                                    </span>
                                  {% endif %}
                                </a>
                              </div>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                    </div>
                  {% else %}
                    <a
                      aria-label="{{ link.title | escape }}"
                      href="{{ link.url | default: '#' }}"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                      class="link button button-ghost flex items-center gap-2 px-0 font-normal hover:text-accent {{ section.settings.link_size }}"
                    >
                      {{ link.title }}
                    </a>
                  {% endif %}
                </li>
              {% endif %}
            {% endfor %}
          {% endfor %}
          {% for link in section.settings.menu.links %}
            {% liquid
              assign hasMegaMenu = false
              for block in section.blocks
                if block.settings.menu_item == link.title
                  assign hasMegaMenu = true
                  break
                endif
              endfor

              if hasMegaMenu
                continue
              endif
            %}
            <li class="flex items-center">
              {% if link.links != blank %}
                <div
                  x-data="{ open: false, close: false }"
                  class="flex select-none items-center"
                  @scroll.window="$nextTick(() => open = false)"
                  @click.outside="$nextTick(() => open = false)"
                  @mouseenter="$nextTick(() => open = true)"
                  @mouseleave="open = false"
                >
                  <div class="relative">
                    <button
                      class="button button-ghost flex items-center gap-2 px-0 font-normal hover:text-accent {{ section.settings.link_size }}"
                      :class="{ 'text-accent': open }"
                      type="button"
                    >
                      <span class="mr-1">
                        {{- link.title | escape -}}
                      </span>
                      <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        class="icon min-h-[1.5rem] min-w-[1.5rem]"
                      >
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M6.2762 8.65115C6.6345 8.30664 7.20424 8.31781 7.54875 8.67611L12 13.4014L16.4513 8.67611C16.7958 8.31781 17.3655 8.30664 17.7238 8.65115C18.0821 8.99567 18.0933 9.56541 17.7487 9.9237L12.6488 15.3237C12.4791 15.5002 12.2448 15.5999 12 15.5999C11.7552 15.5999 11.5209 15.5002 11.3513 15.3237L6.25125 9.9237C5.90674 9.56541 5.91791 8.99567 6.2762 8.65115Z" fill="currentColor"/>
                      </svg>
                    </button>
                    <ul
                      id="menu"
                      x-cloak
                      x-show="open"
                      x-transition:enter="transition ease-out duration-100"
                      x-transition:enter-start="opacity-0 scale-90"
                      x-transition:enter-end="opacity-100 scale-100"
                      x-transition:leave="transition ease-in duration-100"
                      x-transition:leave-start="opacity-100 scale-100"
                      x-transition:leave-end="opacity-0 scale-90"
                      class="absolute left-0 top-full z-30 flex min-w-[13rem] flex-col gap-6 py-5 shadow {{ section.settings.background_color }}"
                    >
                      {%- for childlink in link.links -%}
                        <li>
                          {%- if childlink.links == blank -%}
                            <a
                              aria-label="{{ childlink.title | escape }}"
                              href="{{ childlink.url | default: '#' }}"
                              class="link flex px-4 hover:text-accent {{ section.settings.child_link_color }} {{ section.settings.child_link_size }}"
                              {% if childlink.current %}
                                aria-current="page"
                              {% endif %}
                            >
                              {{ childlink.title | escape }}
                            </a>
                          {%- else -%}
                            <div x-data="{ open_sub: false }">
                              <div
                                class="relative flex cursor-pointer items-center justify-between gap-1 px-4 hover:text-accent {{ section.settings.child_link_color }} {{ section.settings.child_link_size }}"
                                :class="{ 'text-accent': open_sub }"
                                @mouseover="$nextTick(() => open_sub = true)"
                                @mouseout="$nextTick(() => open_sub = false)"
                              >
                                <span>{{ childlink.title | escape }}</span>
                                <svg
                                  width="24"
                                  height="24"
                                  viewBox="0 0 24 24"
                                  fill="none"
                                  xmlns="http://www.w3.org/2000/svg"
                                  class="icon -rotate-90"
                                >
                                  <path fill-rule="evenodd" clip-rule="evenodd" d="M6.2762 8.65115C6.6345 8.30664 7.20424 8.31781 7.54875 8.67611L12 13.4014L16.4513 8.67611C16.7958 8.31781 17.3655 8.30664 17.7238 8.65115C18.0821 8.99567 18.0933 9.56541 17.7487 9.9237L12.6488 15.3237C12.4791 15.5002 12.2448 15.5999 12 15.5999C11.7552 15.5999 11.5209 15.5002 11.3513 15.3237L6.25125 9.9237C5.90674 9.56541 5.91791 8.99567 6.2762 8.65115Z" fill="currentColor"/>
                                </svg>
                                <ul
                                  x-cloak
                                  x-show="open_sub"
                                  role="list"
                                  x-transition:enter="transition ease-out duration-100"
                                  x-transition:enter-start="opacity-0 scale-90"
                                  x-transition:enter-end="opacity-100 scale-100"
                                  x-transition:leave="transition ease-in duration-100"
                                  x-transition:leave-start="opacity-100 scale-100"
                                  x-transition:leave-end="opacity-0 scale-90"
                                  class="absolute left-full top-0 z-30 flex min-w-[13rem] flex-col gap-6 px-4 py-5 shadow {{ section.settings.background_color }}"
                                >
                                  {%- for grandchildlink in childlink.links -%}
                                    <li>
                                      <a
                                        aria-label="{{ grandchildlink.title | escape }}"
                                        href="{{ grandchildlink.url | default: '#' }}"
                                        class="link hover:text-accent {{ section.settings.child_link_color }} {{ section.settings.child_link_size }}"
                                        {% if grandchildlink.current %}
                                          aria-current="page"
                                        {% endif %}
                                      >
                                        {{ grandchildlink.title | escape }}
                                      </a>
                                    </li>
                                  {%- endfor -%}
                                </ul>
                              </div>
                            </div>
                          {%- endif -%}
                        </li>
                      {%- endfor -%}
                    </ul>
                  </div>
                </div>
              {% else %}
                <a
                  aria-label="{{ link.title | escape }}"
                  href="{{ link.url | default: '#' }}"
                  {% if link.current %}
                    aria-current="page"
                  {% endif %}
                  class="link button button-ghost flex items-center gap-2 px-0 font-normal hover:text-accent {{ section.settings.link_size }}"
                >
                  {{ link.title }}
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      {% endif %}
      {% if section.settings.select_position == 'center' %}
        <div>
          <a
            aria-label="{{ 'common.aria_label.cart' | t }}"
            class="link flex shrink-0 justify-center"
            href="{{ routes.root_url }}"
          >
            {% render 'logo', logo_color: section.settings.logo_color, logo_size: section.settings.logo_size %}
          </a>
        </div>
      {% endif %}
      <div class="flex flex-1 items-center justify-end gap-2 lg:gap-4">
        {% if section.settings.extra_menu != blank %}
          <ul class="hidden flex-wrap gap-4 md:flex">
            {% for link in section.settings.extra_menu.links %}
              <li class="flex items-center">
                {% if link.links != blank %}
                  <div
                    x-data="{ open: false }"
                    class="flex select-none items-center"
                    @mouseover="$nextTick(() => open = true)"
                    @mouseout="$nextTick(() => open = false)"
                  >
                    <div class="relative">
                      <button
                        class="button button-ghost flex items-center gap-2 px-0 font-normal hover:text-accent {{ section.settings.link_size }}"
                        :class="{ 'text-accent': open }"
                        type="button"
                      >
                        <span class="mr-1">
                          {{- link.title | escape -}}
                        </span>
                        <svg
                          width="24"
                          height="24"
                          viewBox="0 0 24 24"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                          class="icon min-h-[1.5rem] min-w-[1.5rem]"
                        >
                          <path fill-rule="evenodd" clip-rule="evenodd" d="M6.2762 8.65115C6.6345 8.30664 7.20424 8.31781 7.54875 8.67611L12 13.4014L16.4513 8.67611C16.7958 8.31781 17.3655 8.30664 17.7238 8.65115C18.0821 8.99567 18.0933 9.56541 17.7487 9.9237L12.6488 15.3237C12.4791 15.5002 12.2448 15.5999 12 15.5999C11.7552 15.5999 11.5209 15.5002 11.3513 15.3237L6.25125 9.9237C5.90674 9.56541 5.91791 8.99567 6.2762 8.65115Z" fill="currentColor"/>
                        </svg>
                      </button>
                      <ul
                        x-cloak
                        x-show="open"
                        x-transition:enter="transition ease-out duration-100"
                        x-transition:enter-start="opacity-0 scale-90"
                        x-transition:enter-end="opacity-100 scale-100"
                        x-transition:leave="transition ease-in duration-100"
                        x-transition:leave-start="opacity-100 scale-100"
                        x-transition:leave-end="opacity-0 scale-90"
                        class="absolute right-0 top-full z-30 flex min-w-[13rem] flex-col gap-6 py-5 shadow {{ section.settings.background_color }}"
                      >
                        {%- for childlink in link.links -%}
                          <li>
                            {%- if childlink.links == blank -%}
                              <a
                                aria-label="{{ childlink.title | escape }}"
                                href="{{ childlink.url | default: '#' }}"
                                class="link flex px-4 hover:text-accent {{ section.settings.child_link_color }} {{ section.settings.child_link_size }}"
                                {% if childlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ childlink.title | escape }}
                              </a>
                            {%- else -%}
                              <div x-data="{ open_sub: false }">
                                <div
                                  class="relative flex cursor-pointer items-center justify-between gap-1 px-4 hover:text-accent {{ section.settings.child_link_color }} {{ section.settings.child_link_size }}"
                                  :class="{ 'text-accent': open_sub }"
                                  @mouseover="$nextTick(() => open_sub = true)"
                                  @mouseout="$nextTick(() => open_sub = false)"
                                >
                                  <div class="flex w-full">
                                    <svg
                                      width="24"
                                      height="24"
                                      viewBox="0 0 24 24"
                                      fill="none"
                                      xmlns="http://www.w3.org/2000/svg"
                                      class="icon rotate-90"
                                    >
                                      <path fill-rule="evenodd" clip-rule="evenodd" d="M6.2762 8.65115C6.6345 8.30664 7.20424 8.31781 7.54875 8.67611L12 13.4014L16.4513 8.67611C16.7958 8.31781 17.3655 8.30664 17.7238 8.65115C18.0821 8.99567 18.0933 9.56541 17.7487 9.9237L12.6488 15.3237C12.4791 15.5002 12.2448 15.5999 12 15.5999C11.7552 15.5999 11.5209 15.5002 11.3513 15.3237L6.25125 9.9237C5.90674 9.56541 5.91791 8.99567 6.2762 8.65115Z" fill="currentColor"/>
                                    </svg>
                                    <span>{{ childlink.title | escape }}</span>
                                  </div>
                                  <ul
                                    x-cloak
                                    x-show="open_sub"
                                    role="list"
                                    x-transition:enter="transition ease-out duration-100"
                                    x-transition:enter-start="opacity-0 scale-90"
                                    x-transition:enter-end="opacity-100 scale-100"
                                    x-transition:leave="transition ease-in duration-100"
                                    x-transition:leave-start="opacity-100 scale-100"
                                    x-transition:leave-end="opacity-0 scale-90"
                                    class="absolute right-full top-0 z-30 flex min-w-[13rem] flex-col gap-6 px-4 py-5 shadow {{ section.settings.background_color }}"
                                  >
                                    {%- for grandchildlink in childlink.links -%}
                                      <li>
                                        <a
                                          aria-label="{{ grandchildlink.title | escape }}"
                                          href="{{ grandchildlink.url | default: '#' }}"
                                          class="link hover:text-accent {{ section.settings.child_link_color }} {{ section.settings.child_link_size }}"
                                          {% if grandchildlink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ grandchildlink.title | escape }}
                                        </a>
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                </div>
                              </div>
                            {%- endif -%}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </div>
                  </div>
                {% else %}
